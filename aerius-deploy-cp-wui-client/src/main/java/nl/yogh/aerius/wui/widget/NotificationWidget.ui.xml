<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:with field='i18n' type='nl.yogh.aerius.wui.i18n.ApplicationMessages' />
  <ui:with field='res' type='nl.yogh.aerius.wui.resources.R.ApplicationResource' />
  <ui:style type="nl.yogh.aerius.wui.widget.NotificationWidget.CustomStyle">
    .panel {
    margin: 10px;
    padding: 40px 20px;
    border-radius: 15px;
    width: 300px;
    color: white;
    background-color: #3333cc;
    }
    .error {
    background-color: #e2007a;
    }
  </ui:style>
  <g:Label styleName="{style.panel}" ui:field="message" />
</ui:UiBinder> 