<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:nl.yogh.gwt.wui.widget"
  xmlns:p="urn:import:nl.yogh.aerius.wui.widget" xmlns:c="urn:import:nl.yogh.aerius.wui.builder.component">
  <ui:with field='i18n' type='nl.yogh.aerius.wui.i18n.ApplicationMessages' />
  <ui:with field='res' type='nl.yogh.aerius.wui.resources.R.ApplicationResource' />
  <ui:style>
    .panel {
    padding: 10px;
    margin: 10px;
    background-color: rgba(125,125,125,0.2);
    }
    .metaText {
    margin-left: 15px;
    }
    .by {
    margin: 0px 15px;
    }
    .button {
    flex-shrink: 0;
    margin: 10px;
    border: 4px solid rgba(125,125,125,0.2);
    padding: 15px 5px;
    cursor: pointer;
    transition: border 0.1s
    ease-out;
    user-select: none;
    }
    .button:hover {
    border-color: rgba(125,125,125,0.5);
    }
    .label {
    font-weight: bold;
    font-size: 1.5em;
    padding: 0px 10px;
    }
  </ui:style>
  <g:FlowPanel styleName="{res.css.flex} {style.panel} {res.css.alignCenter}">
    <g:Label ui:field="idxField" styleName="{style.label} {res.css.noShrink}" />
    <g:FlowPanel>
      <g:FlowPanel styleName="{style.metaText}">
        <g:Label ui:field="titleField" text="Pull request title can be quite long." styleName="" />
        <g:Label text="by" styleName="{style.by}" />
        <g:Label ui:field="authorName" text="Pull request title can be quite long." styleName="" />
      </g:FlowPanel>
      <g:FlowPanel styleName="{res.css.flex} {res.css.wrap} {res.css.distribute}">
        <c:ProjectControlButton text="CALCULATOR" styleName="{style.button}" />
        <c:ProjectControlButton text="SCENARIO" styleName="{style.button}" />
        <c:ProjectControlButton text="DATABASE" styleName="{style.button}" />
        <c:ProjectControlButton text="GEOSERVER" styleName="{style.button}" />
        <c:ProjectControlButton text="TASKMANAGER" styleName="{style.button}" />
        <c:ProjectControlButton text="OPS WORKERS" styleName="{style.button}" />
        <c:ProjectControlButton text="REGISTER" styleName="{style.button}" />
        <c:ProjectControlButton text="MELDING" styleName="{style.button}" />
        <c:ProjectControlButton text="TESTS" styleName="{style.button}" />
      </g:FlowPanel>
    </g:FlowPanel>
  </g:FlowPanel>
</ui:UiBinder>
