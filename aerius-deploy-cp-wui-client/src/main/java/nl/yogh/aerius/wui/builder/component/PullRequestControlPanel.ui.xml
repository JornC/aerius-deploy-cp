<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:nl.yogh.gwt.wui.widget"
  xmlns:p="urn:import:nl.yogh.aerius.wui.widget" xmlns:c="urn:import:nl.yogh.aerius.wui.builder.component">
  <ui:with field='i18n' type='nl.yogh.aerius.wui.i18n.ApplicationMessages' />
  <ui:with field='res' type='nl.yogh.aerius.wui.resources.R.ApplicationResource' />
  <ui:with field='pull' type='nl.yogh.aerius.builder.domain.PullRequestInfo' />
  <ui:with field='eventBus' type='com.google.web.bindery.event.shared.EventBus' />
  <ui:import field='nl.yogh.aerius.builder.domain.ProductType.*' />
  <ui:style>
    .panel {
    padding: 10px;
    margin: 10px;
    background-color: rgba(125,125,125,0.2);
    }
    .metaText {
    margin-left: 15px;
    }
    .by {
    margin: 0px 5px;
    color: #888;
    }
    .label {
    font-weight: bold;
    font-size: 1.5em;
    padding: 0px 10px;
    }
  </ui:style>
  <g:FlowPanel styleName="{res.css.flex} {style.panel} {res.css.alignCenter}">
    <g:Label styleName="{style.label} {res.css.noShrink}" text="#{pull.idx}" />
    <g:FlowPanel>
      <g:FlowPanel styleName="{res.css.flex} {style.metaText}">
        <g:Label text="{pull.title}" />
        <g:Label text="by" styleName="{style.by}" />
        <g:Label text="{pull.author}" />
      </g:FlowPanel>
      <g:FlowPanel styleName="{res.css.flex} {res.css.wrap} {res.css.distribute}">
        <c:ProjectControlButton type="{CALCULATOR}" pull="{pull}" eventBus="{eventBus}" />
        <c:ProjectControlButton type="{WORKERS}" pull="{pull}" eventBus="{eventBus}" />
        <c:ProjectControlButton type="{SCENARIO}" pull="{pull}" eventBus="{eventBus}" />
        <c:ProjectControlButton type="{REGISTER}" pull="{pull}" eventBus="{eventBus}" />
        <c:ProjectControlButton type="{CONNECT}" pull="{pull}" eventBus="{eventBus}" />
        <c:ProjectControlButton type="{MELDING}" pull="{pull}" eventBus="{eventBus}" />
        <c:ProjectControlButton type="{TESTS}" pull="{pull}" eventBus="{eventBus}" />
      </g:FlowPanel>
    </g:FlowPanel>
  </g:FlowPanel>
</ui:UiBinder>
