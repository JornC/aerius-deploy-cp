<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:nl.yogh.gwt.wui.widget"
  xmlns:p="urn:import:nl.yogh.aerius.wui.widget" xmlns:c="urn:import:nl.yogh.aerius.wui.builder.component">
  <ui:with field='i18n' type='nl.yogh.aerius.wui.i18n.ApplicationMessages' />
  <ui:with field='res' type='nl.yogh.aerius.wui.resources.R.ApplicationResource' />
  <ui:style type="nl.yogh.aerius.wui.builder.component.ProjectControlButton.CustomStyle">
    .button {
    flex-shrink: 0;
    margin: 10px;
    border: 4px solid rgba(125,125,125,0.2);
    padding: 15px 5px;
    cursor: pointer;
    transition: border 0.1s ease-out, background 0.1s ease-out;
    user-select: none;
    min-width: 110px;
    }
    .button:hover {
    border-color: rgba(18,171,0,0.5);
    background: rgba(18,171,0,0.3);
    }
    .button div {
    text-align: center;
    }
    .button:hover div:first-child {
    visibility: hidden;
    height: 0px;
    }
    
    .running:hover div:last-child:after {
    content: 'SUSPEND';
    }
    .suspended:hover div:last-child:after {
    content: 'START";
    }
    .unbuilt:hover div:last-child:after {
    content: 'DEPLOY';
    }
  </ui:style>
  <g:FlowPanel ui:field="panel" styleName="{style.button}">
    <g:Label ui:field="textField" />
    <g:Label />
  </g:FlowPanel>
</ui:UiBinder>
